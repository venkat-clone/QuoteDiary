<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="?android:attr/colorBackground"
        android:layout_height="match_parent"
        tools:context=".ui.quotes.QuotesFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_margin="5dp"
            android:background="@drawable/bottom_start_sharp_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="25dp"
                app:cardElevation="3dp"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_round_arrow_back_ios_24"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:tint="?attr/colorPrimary" />
                        <ImageView
                            android:layout_marginEnd="4dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/check_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="?attr/colorPrimary" />
                    </RelativeLayout>
                    <TextView
                        android:padding="30dp"
                        android:text=" Do Not Run Life "
                        android:textSize="50sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                    <com.google.android.material.slider.Slider
                        android:tooltipText="Hello World"
                        android:text="text size"
                        android:valueFrom="0.0"
                        app:thumbElevation="3dp"
                        android:value="32"
                        android:valueTo="64.0"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:elevation="30dp"
                        android:id="@+id/fontRecycler"
                        tools:listitem="@layout/font_item"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal"
                        android:nestedScrollingEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/font_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>